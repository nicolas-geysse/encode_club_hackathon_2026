{
  "name": "stride",
  "version": "0.1.0",
  "private": true,
  "description": "Stride - Navigate student life, one smart step at a time",
  "type": "module",
  "pnpm": {
    "onlyBuiltDependencies": [
      "duckdb",
      "sharp"
    ],
    "overrides": {
      "h3": ">=1.15.5",
      "tar": ">=7.5.4"
    }
  },
  "scripts": {
    "dev": "pnpm --filter @stride/frontend dev",
    "dev:mcp": "pnpm --filter @stride/mcp-server dev",
    "build": "pnpm -r build",
    "build:frontend": "pnpm --filter @stride/frontend build",
    "build:mcp": "pnpm --filter @stride/mcp-server build",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "lint:fix": "eslint packages/*/src --ext .ts,.tsx --fix",
    "format": "prettier --write \"packages/*/src/**/*.{ts,tsx,json}\"",
    "typecheck": "pnpm -r exec tsc --noEmit",
    "prepare": "husky || true",
    "demo:opik": "npx tsx scripts/demo-opik.ts",
    "demo:opik:setup": "npx tsx scripts/demo-opik.ts --setup-only",
    "demo:opik:traces": "npx tsx scripts/demo-opik.ts --traces-only"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-solid": "^0.14.0",
    "husky": "^9.1.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "tsx": "^4.21.0"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "groq-sdk": "^0.37.0",
    "opik": "^1.9.92",
    "sharp": "0.32.6"
  }
}
